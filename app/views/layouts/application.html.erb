<!DOCTYPE html>
<html>
    <head>
        <title>DeviseRails5</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
     
            <nav>

        <header class="header">
        <nav class="nav">
        <ul class="header_menu">
          <% if user_signed_in? %>    
          <strong><%= link_to current_user.username, pages_show_path %></strong>
          <li class="header_menu_title"><%= link_to "kanban", root_path, class: "nav-link" %></li>
          <li>
            <ul class="header_menu_inner">
            
                <li><%= link_to 'プロフィール変更', edit_user_registration_path %></li>
                <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
            <% else %>
                <li><%= link_to 'サインアップ ', new_user_registration_path %></li>
                <li><%= link_to 'ログイン', new_user_session_path %></li>
                <% end %>
            </ul>
          </li>
        </ul>
      </nav>
    </header>


        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>

        <%= yield %>
    </body>
</html>